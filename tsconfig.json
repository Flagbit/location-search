{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "removeComments": false,
    "noImplicitAny": false,
    "types": [
      "angular",
      "angular-mocks",
      "jasmine",
      "selenium-webdriver",
      "googlemaps"
    ]
  },
  "exclude": [
    "node_modules",
    "lib/shared/worker"
  ]
}